<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".chapters.AllContainers">

        <Button
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="@string/ll"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="@string/rl"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/container3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="@string/tl"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/container4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="@string/fl"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/container5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="@string/gl"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/container6"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="@string/cl"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/container7"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="@string/sv"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

    </LinearLayout>
</ScrollView>